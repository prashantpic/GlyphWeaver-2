{
  "name": "glyph-puzzle-analytics-mon",
  "version": "1.0.0",
  "description": "Analytics ingestion and monitoring system handling gameplay telemetry, performance metrics, and error tracking. Integrates with ELK stack and Prometheus/Grafana.",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "glyph-puzzle-analytics-mon"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "analytics",
    "monitoring",
    "telemetry",
    "express",
    "typescript",
    "elk",
    "prometheus",
    "grafana",
    "node.js"
  ],
  "author": "Glyph Puzzle Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@elastic/elasticsearch": "^8.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "elastic-apm-node": "^4.14.1",
    "express": "^4.18.3",
    "prom-client": "^15.1.2",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}