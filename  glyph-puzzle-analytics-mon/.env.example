# Server Configuration
PORT=3000
NODE_ENV=development # Typically 'development', 'staging', or 'production'

# Logging Configuration
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly

# Elastic APM Configuration (REQ-AMOT-005)
ELASTIC_APM_ACTIVE=true
ELASTIC_APM_SERVICE_NAME=glyph-puzzle-analytics-mon
ELASTIC_APM_ENVIRONMENT=development # Should ideally match NODE_ENV
ELASTIC_APM_SERVER_URL=http://localhost:8200
ELASTIC_APM_SECRET_TOKEN=
# ELASTIC_APM_API_KEY= # Alternative to secret token
# ELASTIC_APM_CLOUD_ID= # For Elastic Cloud deployments

# Analytics Ingestion Security
# Hash of the pre-shared API key. Generate a secure hash (e.g., SHA256) of your API key.
# The application will hash the incoming API key and compare it to this hash.
ANALYTICS_API_KEY_HASH=

# Elasticsearch Configuration (for direct ingestion - REQ-AMOT-001, REQ-AMOT-006)
ELASTICSEARCH_NODE_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
# ELASTICSEARCH_API_KEY= # Alternative authentication method, often preferred
# ELASTICSEARCH_CLOUD_ID= # For Elastic Cloud deployments
ELASTICSEARCH_INDEX_PREFIX=analytics # e.g., 'analytics-gameplay', 'analytics-system'

# Feature Flags
FEATURE_FLAG_ENABLE_DETAILED_TELEMETRY_LOGGING=true
FEATURE_FLAG_ENABLE_PROMETHEUS_HIGH_CARDINALITY_METRICS=false
FEATURE_FLAG_ENABLE_ELASTICSEARCH_DIRECT_INGESTION=true