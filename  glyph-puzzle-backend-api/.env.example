# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/glyph_puzzle_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,https://your-game-client.com

# Admin API Key
ADMIN_API_KEY=your_secure_admin_api_key

# IAP Validation URLs
APPLE_IAP_VALIDATION_URL=https://buy.itunes.apple.com/verifyReceipt
# For sandbox: https://sandbox.itunes.apple.com/verifyReceipt
GOOGLE_IAP_VALIDATION_URL=https://www.googleapis.com/androidpublisher/v3/applications/your.package.name/purchases/products/productId/tokens/token
# Note: Google's URL is more dynamic and often constructed. This is a placeholder.
# You will likely need a service account key JSON for Google Play Developer API.
# GOOGLE_PLAY_SERVICE_ACCOUNT_KEY_PATH=path/to/your/service-account-file.json

# Analytics Pipeline
ANALYTICS_PIPELINE_ENDPOINT=https://your-analytics-pipeline.com/ingest

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100 # Max 100 requests per window per IP

# Logging Level (e.g., error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info