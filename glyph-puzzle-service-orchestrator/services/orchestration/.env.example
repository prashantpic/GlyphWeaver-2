# Temporal Server Configuration
TEMPORAL_ADDRESS="localhost:7233"
TEMPORAL_NAMESPACE="default"
# For mTLS, uncomment and set paths if TEMPORAL_TLS_ENABLE=true
# TEMPORAL_TLS_ENABLE=false
# TEMPORAL_CLIENT_CERT_PATH="./certs/client.pem"
# TEMPORAL_CLIENT_KEY_PATH="./certs/client.key"
# TEMPORAL_SERVER_ROOT_CA_CERT_PATH="./certs/ca.pem"
# TEMPORAL_SERVER_NAME_OVERRIDE="your.temporal.server.name" # if using TLS and hostname mismatch

# Service Endpoints
IAP_VALIDATION_SERVICE_ENDPOINT="http://localhost:3001/api/v1/iap/validate" # URL for REPO-SECURITY
BACKEND_API_ENDPOINT="http://localhost:3000/api/v1" # URL for REPO-BACKEND-API
ANALYTICS_SERVICE_ENDPOINT="http://localhost:3002/api/v1/track" # URL for REPO-ANALYTICS-MON or REPO-BACKEND-API analytics endpoint

# API Keys & Auth Tokens
IAP_VALIDATION_SERVICE_API_KEY="your_iap_validation_service_api_key"
BACKEND_API_AUTH_TOKEN="your_backend_api_auth_token_or_key" # e.g., Bearer token or API key

# Temporal Task Queue Names
IAP_PROCESSING_TASK_QUEUE="glyph-puzzle-iap-processing-tq"
SCORE_SUBMISSION_TASK_QUEUE="glyph-puzzle-score-submission-tq"

# Application Environment & Logging
NODE_ENV="development" # 'development', 'production', 'test'
LOG_LEVEL="debug" # 'debug', 'info', 'warn', 'error'

# Feature Flags (Example)
# FEATURE_FLAG_NEW_IAP_FLOW_ENABLED=true

# Retry Policy Configurations (Examples - these would typically be coded, but could be influenced by env vars)
# DEFAULT_ACTIVITY_MAX_ATTEMPTS=3
# CRITICAL_ACTIVITY_MAX_ATTEMPTS=5

# HTTP Client Timeouts (Example - in milliseconds)
# HTTP_CLIENT_TIMEOUT_MS=5000
# HTTP_CLIENT_RETRIES=3