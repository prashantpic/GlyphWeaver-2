{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "migrations/**/*.ts",
    "migrate-mongo-config.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}